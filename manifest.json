{
  "manifest_version": 3,
  "name": "Tab Timer",
  "version": "1.5",
  "description": "Track how long each tab has been open, notify after a threshold, and export session data.",
  "permissions": ["tabs", "storage", "notifications", "downloads", "alarms"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  }
}